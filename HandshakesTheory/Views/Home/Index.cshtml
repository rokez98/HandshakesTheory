@model SearchModel

@{
    ViewData["Title"] = "Home Page";
}

<form asp-controller="Home" asp-action="Search" method="post">
    <div class="container" style="margin-top: 20px;">
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-6">
                        <div id="firstIdForm" class="form-group has-feedback">
                            <div class="input-group">
                                <span class="input-group-addon">vk.com/</span>
                                <input type="text" class="form-control" id="firstId" aria-describedby="firstStatus">
                                <input type="hidden" asp-for="FirstUser.Id" id="firstUserId" />
                                <input type="hidden" asp-for="FirstUser.FirstName" id="firstUserFirstName" />
                                <input type="hidden" asp-for="FirstUser.LastName" id="firstUserLastName" />
                            </div>
                            <span id="firstIdUsernameFeedback" class="feedback feedback-user-name" aria-hidden="true"></span>
                            <span id="firstIdFeedbackIcon" class="feedback feedback-icon glyphicon" aria-hidden="true"></span>
                            <span id="firstStatus" class="sr-only">(success)</span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div id="secondIdForm" class="form-group has-feedback">
                            <div class="input-group">
                                <span class="input-group-addon">vk.com/</span>
                                <input type="text" class="form-control" id="secondId" aria-describedby="secondStatus">
                                <input type="hidden" asp-for="SecondUser.Id" id="secondUserId" />
                                <input type="hidden" asp-for="SecondUser.FirstName" id="secondUserFirstName" />
                                <input type="hidden" asp-for="SecondUser.LastName" id="secondUserLastName" />
                            </div>
                            <span id="secondIdUsernameFeedback" class="feedback feedback-user-name" aria-hidden="true"></span>
                            <span id="secondIdFeedbackIcon" class="feedback feedback-icon glyphicon" aria-hidden="true"></span>
                            <span id="secondStatus" class="sr-only">(success)</span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group has-feedback">
                            <div class="input-group">
                                <span class="input-group-addon">Max path</span>
                                <label class="form-control" id="pathLength"></label>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="slidecontainer">
                            <input asp-for="MaxPathLength" type="range" min="3" max="7" value="4" class="slider" id="myRange">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group btn-group search-button">
                            <input type="submit" class="btn btn-primary" id="submitButton" data-toggle="modal" data-target="#startModal">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

<script>
    var slider = document.getElementById("myRange");
    var output = document.getElementById("pathLength");
    output.innerHTML = slider.value;

    slider.oninput = function () {
        output.innerHTML = this.value;
    }
</script>

<script>
    var firstId = document.getElementById("firstId");

    var firstUserId = document.getElementById("firstUserId");
    var firstUserFirstName = document.getElementById("firstUserFirstName");
    var firstUserLastName = document.getElementById("firstUserLastName");


    var firstIdForm = document.getElementById("firstIdForm");
    var firstIdUsernameFeedback = document.getElementById("firstIdUsernameFeedback");
    var firstIdFeedbackIcon = document.getElementById("firstIdFeedbackIcon");
    

    var secondId = document.getElementById("secondId");
    var secondUserFirstName = document.getElementById("secondUserFirstName");
    var secondUserLastName = document.getElementById("secondUserLastName");

    var secondUserId = document.getElementById("secondUserId");
    var secondIdForm = document.getElementById("secondIdForm");
    var secondIdUsernameFeedback = document.getElementById("secondIdUsernameFeedback");
    var secondIdFeedbackIcon = document.getElementById("secondIdFeedbackIcon");

    var submitButton = document.getElementById("submitButton");

    var firstIdSuccess = false;
    var secondIdSuccess = false;

    firstId.oninput = function () {
        var users = [];
        $.getJSON('https://api.vk.com/method/users.get?v=fuckvk&uids=' + firstId.value + '&fields=sex,bdate,photo_100,education&callback=?',
            function (result) {
                if (result.error) {
                    firstIdForm.classList.remove("has-success");
                    firstIdForm.classList.add("has-error");

                    firstIdFeedbackIcon.classList.remove("glyphicon-ok");
                    firstIdFeedbackIcon.classList.add("glyphicon-remove");

                    firstIdUsernameFeedback.innerText = "";


                    firstIdSuccess = false;

                    submitButton.disabled = true;
                }
                else {
                    users = users.concat(result.response);

                    firstUserId.value = users[0].uid;
                    firstUserFirstName.value = users[0].first_name;
                    firstUserLastName.value = users[0].last_name;

                    firstIdForm.classList.add("has-success");
                    firstIdForm.classList.remove("has-error");

                    firstIdFeedbackIcon.classList.add("glyphicon-ok");
                    firstIdFeedbackIcon.classList.remove("glyphicon-remove");

                    firstIdUsernameFeedback.innerHTML = users[0].first_name + ' ' + users[0].last_name;

                    firstIdSuccess = true;
                    if (secondIdSuccess == true)  submitButton.disabled = false;
                }
            });
    }

    secondId.oninput = function () {
        var users = [];
        $.getJSON('https://api.vk.com/method/users.get?v=fuckvk&uids=' + secondId.value + '&fields=sex,bdate,photo_100,education&callback=?',
            function (result) {
                if (result.error) {
                    secondIdForm.classList.remove("has-success");
                    secondIdForm.classList.add("has-error");

                    secondIdFeedbackIcon.classList.remove("glyphicon-ok");
                    secondIdFeedbackIcon.classList.add("glyphicon-remove");

                    secondIdUsernameFeedback.innerHTML = "";

                    secondIdSuccess = false;

                    submitButton.disabled = true;
                }
                else {
                    users = users.concat(result.response);

                    secondUserId.value = users[0].uid;
                    secondUserFirstName.value = users[0].first_name;
                    secondUserLastName.value = users[0].last_name;


                    secondIdFeedbackIcon.classList.remove("glyphicon-remove");
                    secondIdFeedbackIcon.classList.add("glyphicon-ok");

                    secondIdForm.classList.remove("has-error");
                    secondIdForm.classList.add("has-success");

                    secondIdUsernameFeedback.innerHTML = users[0].first_name + ' ' + users[0].last_name;

                    secondIdSuccess = true;
                    if (firstIdSuccess == true) submitButton.disabled = false;
                }
            });
    }

</script>
